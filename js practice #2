<html>
<title>James' Javascript Practice Session</title>
<head>

<script type = "text/javascript">
	function show_alert()
	{
	alert("Warning, Will Robinson!");
	}
</script>


<script type = "text/javascript">
	function show_confirm()
	{
		var r=confirm("Would you like to play a game?");
		if(r==true)
		{
		alert("Yay!");
		}
		else
		{
		alert("Sad face.");
		}
	}
</script>

<script type="text/javascript">
	function show_prompt()
	{
	var name=prompt("Please enter" + '\n' + "your name","Harry Potter");
	if(name!=null && name!="")
		{
		document.write("<p>Hello " + name + "! How are you today?</p>");
		}
	}
</script>






</head>
<body>


<input type = "button" onclick ="show_alert()" value = "Show alert box" />
<br />

<input type = "button" onclick ="show_confirm()" value = "Show confirmation box" />
<br />

<input type = "button" onclick ="show_prompt()" value = "Show prompt box" />







</body>
</html>
